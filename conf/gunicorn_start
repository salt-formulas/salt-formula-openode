#!/bin/bash
{%- set server = pillar.openode.server %}

NAME="openode"
DJANGODIR=/srv/openode/site
USER=openode
GROUP=openode
NUM_WORKERS={{ server.workers }}
DJANGO_SETTINGS_MODULE=local_settings
DJANGO_WSGI_MODULE=wsgi

#echo "Starting $NAME as `whoami`"

# Activate the virtual environment
cd $DJANGODIR
source /srv/openode/bin/activate
export DJANGO_SETTINGS_MODULE=$DJANGO_SETTINGS_MODULE
export PYTHONPATH=$DJANGODIR:$PYTHONPATH
#export PYTHONPATH=:/srv/openode/site

# Start your Django Unicorn
# Programs meant to be run under supervisor should not daemonize themselves (do not use --daemon)
exec /srv/openode/bin/gunicorn ${DJANGO_WSGI_MODULE}:application \
  --name $NAME \
  --workers $NUM_WORKERS \
  --user=$USER --group=$GROUP \
  --log-level=debug \
  --bind={{ server.bind.address }}:{{ server.bind.port }}